@{
	Layout = "_Layout";
}

@section containerContent {
	<head>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.6/dist/flatpickr.min.css">
		<script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.6/dist/flatpickr.min.js"></script>
	</head>
	<h1> Add Expense </h1>

	<hr />

	<div class="row">

		<div class="col-md-4">

			<form action="/WebBudget/CreateExpense" method="post">
				<div class="form-group mb-3">

					<label class="control-label" for="WebBudget">
						Expense Name
					</label>
					<input class="form-control" type="text" id="IncomeType" name="BudgetExpense.ExpenseType" placeholder="Provide expense type" />

				</div>


				<div class="form-group mb-3">
					<label class="control-label" for="WebBudget">
						Expense Date
					</label>
					<input class="form-control" type="text" id="IncomeDate" name="BudgetExpense.ExpenseDate" placeholder="Select date" data-input>
				</div>


				<div class="form-group mb-3">

					<label class="control-label" for="WebBudget">
						Expense Value
					</label>
					<input class="form-control" type="text" id="IncomeValue" name="BudgetExpense.ExpenseValue" placeholder="Provide expense value" />

				</div>

				<div class="form-group mb-3">
					<input type="submit" value="Add Expense" class="btn btn-primary" />


				</div>
			</form>
		</div>
	</div>

	<script>
		flatpickr('#IncomeDate', {
			enableTime: false,
			dateFormat: 'Y-m-d',
		});
	</script>

}