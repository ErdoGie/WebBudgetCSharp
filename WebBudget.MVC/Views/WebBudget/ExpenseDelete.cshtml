@model WebBudget.Application.WebBudget.Commands.Queries.DeleteWebBudget.DeleteWebBudgetExpense.DeleteWebBudgetExpenseCommand

@{
	ViewData["Title"] = "ExpenseDelete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section containerContent{

	<h4>Delete:</h4>
	<hr />

    <div class=" text-center">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExpenseType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExpenseType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExpenseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExpenseDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExpenseValue)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExpenseValue)
            </dd>
        </dl>

        <form asp-action="ExpenseDelete">
            <input type="submit" value="Delete" class="btn btn-danger pulsating-button" />
            <a asp-action="ExpensesIndex" class="btn btn-danger">Get me back</a>
        </form>
    </div>

}
