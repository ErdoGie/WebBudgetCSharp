@model WebBudget.Application.WebBudget.Commands.CategoryViewModels.CreateIncomeView



@{
	ViewData["Title"] = "IncomesIndex2";
	Layout = "~/Views/Shared/_Layout.cshtml";

}
@section containerContent  {
	<h4>Your incomes</h4>
	<hr />


	<div class="d-flex justify-content-center">
		<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addIncomeModal">
			Add Income
		</button>
	</div>

	<div id="addIncomeModal" class="modal fade" role="dialog">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="addIncomeModalLabel">Add Income</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form asp-action="CreateIncome" class="needs-validation" novalidate>
						<div class="form-group">
							<label for="IncomeCommand.IncomeType" class="control-label" style="color:white">Category</label>
							<div class="form-group">
								@if (Model.IncomeCommand.IncomeCategories.Any())
								{
									<select id="IncomeCommand.IncomeType" name="IncomeCommand.IncomeType" class="form-control">
										<option style="text-align:center" value="" selected disabled>Choose income category</option>
										@foreach (var category in Model.IncomeCommand.IncomeCategories)
										{
											<option style="text-align:center" value="@category.CategoryName">@category.CategoryName</option>

										}
									</select>
								}
								else
								{
									<select id="IncomeCommand.IncomeType" name="IncomeCommand.IncomeType" class="form-control">
										<option class="text-muted" selected disabled>No category available. Add some first.</option>
									</select>
								}
								<span class="text-danger" asp-validation-for="IncomeCommand.IncomeCommand.IncomeType"></span>
							</div>
						</div>

						<div class="form-group">
							<label for="IncomeCommand.IncomeDate" class="control-label" style="color:white">Date</label>
							<input id="IncomeCommand.IncomeDate" style="text-align:center" name="IncomeCommand.IncomeDate" class="form-control" type="date" required />
							<span class="text-danger" asp-validation-for="IncomeCommand.IncomeCommand.IncomeDate"></span>
						</div>
						<div class="form-group">
							<label for="IncomeCommand.IncomeCommand.IncomeValue" class="control-label" style="color:white">Value</label>
							<input id="IncomeCommand.IncomeCommand.IncomeValue" name="IncomeCommand.IncomeValue" style="text-align:center" class="form-control" required />
							<span class="text-danger" asp-validation-for="IncomeCommand.IncomeCommand.IncomeValue"></span>
						</div>
						<div class="form-group d-flex justify-content-center">
							<input type="submit" value="Create" class="btn btn-primary" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		@foreach (var income in Model.Incomes)
		{
			<div class="col-md-6 col-lg-4 small-card">
				<div class="card m-3 small-card">
					<div class="card-body">
						<h6 class="card-title"> @income.IncomeType</h6>
						<h6 class="card-subtitle mb-2 text-muted">@income.IncomeDate.ToString("yyyy-MM-dd")</h6>
						<h6 class="card-title"> @income.IncomeValue zł</h6>
						<button type="button" class="btn btn-info edit-btn" data-toggle="modal" data-target="#editIncomeModal" data-income-id="@income.IncomeId">Edit</button>
						<button type="button" class="btn btn-danger delete-btn" data-toggle="modal" data-target="#deleteIncomeModal" data-income-id="@income.IncomeId">Delete</button>
					</div>
				</div>
			</div>
		}
	</div>



	<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
		<div class="modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="editModalLabel">Edit Income</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form id="editIncomeForm" asp-action="EditIncome" method="post">
						<div class="form-group">
							<label for="IncomeCommand.IncomeType" class="control-label" style="color:white">Category</label>
							<select id="IncomeCommand.IncomeType" name="IncomeCommand.IncomeType" class="form-control" required>
								<option value="" selected disabled>Choose income category</option>
								@foreach (var category in Model.IncomeCommand.IncomeCategories)
								{
									<option value="@category.CategoryName">@category.CategoryName</option>
								}
							</select>
							<span class="text-danger" asp-validation-for="IncomeCommand.IncomeCommand.IncomeType"></span>
						</div>

						<div class="form-group">
							<label for="IncomeCommand.IncomeDate" class="control-label" style="color:white">Date</label>
							<input id="IncomeCommand.IncomeDate" name="EditIncomeCommand.IncomeDate" class="form-control" type="date" required />
							<span class="text-danger" asp-validation-for="IncomeCommand.IncomeCommand.IncomeDate"></span>
						</div>

						<div class="form-group">
							<label for="IncomeCommand.IncomeValue" class="control-label" style="color:white">Value</label>
							<input id="IncomeCommand.IncomeValue" name="EditIncomeCommand.IncomeValue" class="form-control" required />
							<span class="text-danger" asp-validation-for="IncomeCommand.IncomeCommand.IncomeValue"></span>
						</div>

						<input type="hidden" id="IncomeCommand.IncomeId" name="IncomeCommand.IncomeId" value="" />

						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
							<button type="submit" class="btn btn-primary" id="EditIncomeBtn">Save Changes</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="deleteIncomeModal" tabindex="-1" role="dialog" aria-labelledby="deleteIncomeModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					Are you sure you want to delete this income?
					<form id="deleteIncomeForm" asp-action="DeleteIncome" method="post">
						<input type="hidden" id="IncomeId" name="IncomeId" value="" />
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
					<button type="button" class="btn btn-danger" id="ConfirmDeleteIncomeBtn">Delete</button>
				</div>
			</div>
		</div>
	</div>


  }

@section scripts {
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

	<script>
		var incomeIdToDelete;
		var incomeIdToEdit;

		document.querySelectorAll('.delete-btn').forEach(button => {
			button.addEventListener('click', function () {
				incomeIdToDelete = this.getAttribute('data-income-id');
				document.getElementById('IncomeId').value = incomeIdToDelete;
			});
		});


		document.getElementById('ConfirmDeleteIncomeBtn').addEventListener('click', function () {
			if (incomeIdToDelete) {
				document.getElementById('IncomeId').value = incomeIdToDelete;
				document.getElementById('deleteIncomeForm').submit();
				incomeIdToDelete = null;
			}
			$('#deleteIncomeModal').modal('hide');
		});

		function deleteIncome(incomeId) {
			fetch(`/WebBudget/DeleteIncome/${incomeId}`, {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json',
					'X-Requested-With': 'XMLHttpRequest'
				}
			});
		}

	</script>
}