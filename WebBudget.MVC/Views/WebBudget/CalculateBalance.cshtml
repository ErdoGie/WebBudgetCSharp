@model WebBudget.Domain.Entities.CalcualteBalance

@{
	ViewData["Title"] = "Balance";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section containerContent{

	<div>
		<h3>Calculate your balance</h3>
		<hr />
		<h4>Choose date range:</h4>
		<br />
        <form method="post" asp-action="Balance">
            <div class="form-group col-md-4 mx-auto">
                <label for="startDate">Beginning Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate" required
                       min="2000-01-01" max="@DateTime.Today.AddMonths(1).AddDays(-1).ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group col-sm-4 mx-auto">
                <label for="endDate">Ending Date:</label>
                <input type="date" class="form-control" id="endDate" name="endDate" required
                       min="2000-01-01" max="@DateTime.Today.AddMonths(1).AddDays(-1).ToString("yyyy-MM-dd")" />
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top:20px">Calculate!</button>
        </form>


	</div>

}
