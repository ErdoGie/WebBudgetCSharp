@model WebBudget.Application.WebBudget.Commands.CreateIncomeCategory.CreateIncomeCategoryCommand

@{
	ViewData["Title"] = "AddIncomeCategory";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section containerContent{
	<h1>Add Category</h1>

	<hr />
	<div class="row">
		<div class="col-md-4 mx-auto" style="margin-top:10%">
			<form asp-action="AddIncomeCategory">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label for="CategoryName" class="control-label">Category</label>
					<input asp-for="CategoryName" class="form-control" />
					<span asp-validation-for="CategoryName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	<div>
		<a asp-action="ManageIncome">Back to manage</a>
	</div>

}
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
