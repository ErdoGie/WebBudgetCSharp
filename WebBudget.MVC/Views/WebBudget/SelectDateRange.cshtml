@model WebBudget.Application.Balance.BalanceModel

@{
    ViewData["Title"] = "SelectDateRange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section containerContent{
	<h4>Provide Date Range</h4>
	<hr />
	<div class="d-flex justify-content-center align-items-center" style="margin-top:10%">
		<div class="row">
			<form method="get" asp-action="CalculateBalance" class="mx-auto">
				<div class="form-group col-md-auto">
					<label for="startDate">Beginnig Date:</label>
					<input type="date" class="form-control" id="startDate" name="startDate" required />
				</div>
				<div class="form-group col-md-auto">
					<label for="endDate">End Date:</label>
					<input type="date" class="form-control" id="endDate" name="endDate" required />
				</div>
				<div class="col-md-12 text-center" style="margin-top:10%; margin-bottom:10%">
					<button type="submit" class="btn btn-primary">Calculate</button>
				</div>
			</form>
		</div>
	</div>
}