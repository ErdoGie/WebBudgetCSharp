<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Web Budget App</title>

	@* bootstrap *@
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/WebBudget.MVC.styles.css" asp-append-version="true" />

	@* favicon *@
	<link rel="icon" href="~/lib/favicon.ico" />

	@* icons *@
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

	@* google fonts *@
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Edu+SA+Beginner:wght@600&display=swap" rel="stylesheet">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Victor+Mono:wght@300&display=swap" rel="stylesheet">

</head>
<body >
	<header class="text-center py-4">
		<h2 class="WebBudget">Web Budget</h2>
	</header>

	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3 custom-navbar">
		<div class="container-fluid">
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link text-dark text-white " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
				
					<li class="nav-item">
						<a class="nav-link text-dark text-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>


	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<div class="background-container">
		<div class="centered-container ">
			@RenderSection("ContainerContent", required: false)
		</div>
	</div>


	<footer class="border-top footer text-muted center-line ">
		<div class="container">

			<a href="https://radoslaw-gucwa.profesjonalnyprogramista.pl/?page_id=2292">
				<i class="fa-solid fa-address-card fa-2x " style="color: white; margin-right:10px"></i>
			</a>

			<a href="https://github.com/ErdoGie?tab=repositories">
				<i class="fa-brands fa-github fa-2x" style="color: white;"></i>
			</a>
		</div>
	</footer>

	@* javascript *@
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
