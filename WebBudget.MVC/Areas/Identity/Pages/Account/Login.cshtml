@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}
@section containerContent{
    <div class="d-flex justify-content-center align-items-center" >
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>Welcome back!</h4>
                    <hr style="margin-bottom:25%" />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Login" class="form-label">Login</label>
                        <span asp-validation-for="Input.Login" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary pulsating-button">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <label>
                            <input type="checkbox" name="remember_me">
                            Remember me
                        </label>
                    </div>
                </form>
            </section>
        </div>
    </div>


}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
