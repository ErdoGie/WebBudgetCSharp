@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}
@section containerContent{
	<div class="d-flex justify-content-center align-items-center">
		<div class="col-md-4">
			<section>
				<form id="account" method="post">
					<h4>Welcome back!</h4>
					<hr style="margin-bottom:15%" />
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					<div class="form-floating mb-3">
						<input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
						<label asp-for="Input.Login" class="form-label">Login</label>
						<span asp-validation-for="Input.Login" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
						<label asp-for="Input.Password" class="form-label">Password</label>
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>
					<div style="margin-top:5%">
						<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
					</div>
					<div>
						<div style="margin-top:2%">

							<button type="button" class="btn btn-light" data-toggle="modal" data-target="#forgotPasswordModal">
								Forgotten Password ? <i class="far fa-frown"></i>
							</button>
						</div>
						<div class="checkbox mb-3">
							<label asp-for="Input.RememberMe" class="form-label">
								<input class="form-check-input" asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
						<p style="margin-top:5%">
							<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have account?</a>
						</p>

					</div>
				</form>



				<div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header" style="text-align:center; justify-content:center">
								<h5 class="modal-title" id="exampleModalLabel" >Forgot your password? </h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<form asp-page="./ForgotPassword" method="post">
									<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
									<div class="form-group">
										<label for="Email" style="color:white; margin-bottom:2%">Email:</label>
										<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
										<span asp-validation-for="Input.Email" class="text-danger"></span>
									</div>
									<button style="margin-top:2%" type="submit" class="btn btn-primary">Reset Password</button>
								</form>
							</div>
						</div>
					</div>
				</div>

			</section>
		</div>
	</div>


}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
